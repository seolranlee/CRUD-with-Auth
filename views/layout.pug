doctype html
html
    head
        meta(charest='utf-8')
        style
            include style.css
    body
        div#root
            div#app
                nav#account
                    h1
                        a(href='/topic') Server Side JavaScript

                    ul
                        if user
                            li
                                p= user.displayName + '님 환영합니다.'
                            li
                                a(href='/auth/logout') Logout
                        else
                            li
                                a(href='/auth/register') Register
                            li
                                a(href='/auth/login') Login
                div.todo-app
                    ul
                        each item in topics
                            li
                                a(href='/topic/' + item.id)= item.title
                    block content